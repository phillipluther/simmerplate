{% set title = "Simmerplate" %}
{% set description = "A 'good enough' UI baseline so you can focus on development. It's not quite a boilerplate." %}

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}" />
    <link rel="stylesheet" href="simmerplate-sans.css" />
  </head>
  <body>
    <main style="max-width:810px;margin:0 auto;">
      {% block content %}
      <h1>{{ title }}</h1>
      <p>{{ description }}</p>
      {% endblock %}
    </main>
  </body>
</html>
