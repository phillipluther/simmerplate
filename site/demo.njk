<article id="forms">
  <h2>Form Elements</h2>

  <section id="buttons">
    <h3>Buttons and Buttonlike Inputs</h3>

    <div>
      <input type="button" name="button_input" value="Button Input" />
    </div>
    <div>
      <input type="reset" name="reset_button" value="Reset Input" />
    </div>
    <div>
      <input type="submit" name="submit_button" value="A Submit Input" />
    </div>

    <div>
      <button type="button">A Standard Button</button>
    </div>
    <div>
      <button type="reset">A Reset Button</button>
    </div>
    <div>
      <button type="submit">A Submit Button</button>
    </div>
  </section>

  <section id="textFields">
    <h3>Text and Textlike Inputs (with Labels!)</h3>

    <label for="dateInput">Date Input</label>
    <input type="date" id="dateInput" />

    <label for="datetimeInput">Datetime-local Input</label>
    <input type="datetime-local" id="datetimeInput" />

    <label for="emailInput">Email Input</label>
    <input type="email" id="emailInput" />

    <label for="monthInput">Month Input</label>
    <input type="month" id="monthInput" />

    <label for="numberInput">Number Input</label>
    <input type="number" id="numberInput" />

    <label for="passwordInput">Password Input</label>
    <input type="password" id="passwordInput" />

    <label for="searchInput">Search Input</label>
    <input type="search" id="searchInput" />

    <label for="telInput">Telephone (Tel) Input</label>
    <input type="tel" id="telInput" />

    <label for="textInput">Text Input</label>
    <input type="text" id="textInput" />

    <label for="timeInput">Time Input</label>
    <input type="time" id="timeInput" />

    <label for="urlInput">URL Input</label>
    <input type="url" id="urlInput" />

    <label for="weekInput">Week Input</label>
    <input type="week" id="weekInput" />
  </section>

