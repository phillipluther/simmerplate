{
  "name": "simmerplate",
  "version": "0.5.0",
  "description": "A 'good enough' UI baseline so you can focus on development. It's not quite a boilerplate.",
  "main": "css/simmerplate-sans.css",
  "files": [
    "css"
  ],
  "scripts": {
    "clean": "rm -rf ./css ./public",
    "build:styles": "node scripts/build-styles",
    "build:site": "node scripts/build-site",
    "build": "run-s build:styles build:site",
    "dev": "run-p watch:styles watch:site serve",
    "prebuild": "npm run clean",
    "predev": "run-s clean build",
    "serve": "node scripts/dev-server",
    "watch:site": "nunjucks *.njk -p site -o public -w",
    "watch:styles": "sass styles/simmerplate-sans.scss:public/simmerplate-sans.css styles/simmerplate-serif.scss:public/simmerplate-serif.css --watch"
  },
  "keywords": [
    "typography",
    "ui",
    "css",
    "boilerplate",
    "normalize",
    "responsive"
  ],
  "license": "MIT",
  "repository": "https://github.com/phillipluther/simmerplate",
  "bugs": "https://github.com/phillipluther/simmerplate/issues",
  "devDependencies": {
    "connect-livereload": "^0.6.1",
    "express": "^4.17.1",
    "livereload": "^0.9.3",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "nunjucks-cli": "^1.0.0",
    "sass": "^1.39.0"
  }
}
