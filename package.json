{
  "name": "simmerplate",
  "version": "0.4.2",
  "description": "A 'good enough' UI baseline so you can focus on development. It's not quite a boilerplate.",
  "main": "css/simmerplate-sans.css",
  "files": "css",
  "scripts": {
    "clean": "rm -rf ./css",
    "build:sans": "sass ./src/simmerplate-sans.scss ./css/simmerplate-sans.css",
    "build:serif": "sass ./src/simmerplate-serif.scss ./css/simmerplate-serif.css",
    "preminify:sans": "npm run build:sans",
    "minify:sans": "cleancss -o ./css/simmerplate-sans.min.css ./css/simmerplate-sans.css",
    "preminify:serif": "npm run build:serif",
    "minify:serif": "cleancss -o ./css/simmerplate-serif.min.css ./css/simmerplate-serif.css",
    "prebuild": "npm run clean",
    "build": "npm run minify:sans && npm run minify:serif"
  },
  "keywords": [
    "typography",
    "ui",
    "css",
    "boilerplate",
    "normalize",
    "responsive"
  ],
  "license": "MIT",
  "repository": "https://github.com/phillipluther/simmerplate",
  "bugs": "https://github.com/phillipluther/simmerplate/issues",
  "devDependencies": {
    "clean-css": "^5.1.5",
    "clean-css-cli": "^5.3.3",
    "sass": "^1.39.0"
  }
}
