{
  "name": "simmerplate",
  "version": "0.5.0",
  "description": "A 'good enough' UI baseline so you can focus on development. It's not quite a boilerplate.",
  "main": "css/simmerplate-sans.css",
  "files": [
    "css"
  ],
  "scripts": {
    "clean": "rm -rf ./css ./public",
    "build:styles": "node scripts/build-stylesheets",
    "build:demo": "node scripts/build-demo",
    "build": "npm run build:styles && npm run build:demo",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "typography",
    "ui",
    "css",
    "boilerplate",
    "normalize",
    "responsive"
  ],
  "license": "MIT",
  "repository": "https://github.com/phillipluther/simmerplate",
  "bugs": "https://github.com/phillipluther/simmerplate/issues",
  "devDependencies": {
    "nunjucks": "^3.2.3",
    "sass": "^1.39.0"
  }
}
